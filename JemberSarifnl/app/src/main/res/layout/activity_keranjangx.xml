<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="73dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="14dp"
        android:layout_marginTop="15dp"
        android:text="Keranjang"
        android:textColor="@color/colorPrimary"
        android:textSize="40sp"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="14dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal">

        <RadioButton

            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Pilih semua produk "
            android:textSize="20sp" />
    </LinearLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/radio1"
            android:layout_width="56dp"
            android:layout_height="54dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="0dp"
            android:layout_marginLeft="26dp"
            android:layout_marginTop="24dp" />

        <ImageView
            android:layout_width="86dp"
            android:layout_height="77dp"
            android:layout_alignLeft="@+id/radio1"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="45dp"
            android:layout_marginTop="17dp"
            android:src="@drawable/ic_photo_camera_black_24dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="17dp"
            android:layout_marginEnd="39dp"
            android:text="Keripik Singkokng"
            android:textSize="25sp"
            android:textStyle="bold"
            android:id="@+id/judul"
            android:layout_alignParentRight="true"
            android:layout_marginRight="39dp" />

        <TextView
            android:id="@+id/harga"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/judul"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="19dp"
            android:text="Rp.5.000"
            android:textSize="18sp"
            android:layout_alignLeft="@+id/judul" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/harga"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="-1dp"
            android:layout_marginEnd="38dp"
            android:text="Jumlah 1 "
            android:textSize="18sp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="38dp" />


    </RelativeLayout>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_gravity="right"
        android:layout_marginRight="30dp"
        android:gravity="center"
        android:text="Bayar"
        android:id="@+id/bayar"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true" />

</LinearLayout>