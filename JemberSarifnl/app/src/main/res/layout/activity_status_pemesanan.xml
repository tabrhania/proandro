<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent" android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Status pemesanan"
        android:textSize="30sp"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="231dp">

        <ImageView
            android:layout_width="86dp"
            android:layout_height="77dp"
            android:layout_alignLeft="@+id/radio1"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="42dp"
            android:layout_marginTop="20dp"
            android:src="@drawable/ic_photo_camera_black_24dp" />

        <TextView
            android:id="@+id/judul"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="17dp"
            android:layout_marginEnd="61dp"
            android:text="Keripik Singkokng"
            android:textSize="25sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/harga"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/judul"
            android:layout_alignParentTop="true"
            android:layout_marginStart="2dp"
            android:layout_marginTop="59dp"
            android:text="Rp.10.000"
            android:textSize="18sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/harga"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="1dp"
            android:layout_marginEnd="57dp"
            android:text="Sudah Bayar"
            android:textSize="18sp" />

        <TextView
            android:layout_width="382dp"
            android:layout_height="75dp"
            android:layout_alignTop="@+id/harga"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="81dp"
            android:layout_marginEnd="17dp"
            android:text="Status Pemesanan : ON PROGSES "
            android:textSize="23sp" />


        <TextView
            android:layout_width="182dp"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/harga"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="32dp"
            android:layout_marginEnd="85dp"
            android:text="Resi : 030120212544 "
            android:textSize="18sp" />


    </RelativeLayout>

</LinearLayout>