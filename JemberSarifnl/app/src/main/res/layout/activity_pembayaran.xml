<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="37dp"
        android:text="Tujuan Pengiriman"
        android:textSize="25sp"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="136dp">

        <TextView
            android:layout_width="406dp"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="5dp"
            android:layout_marginTop="1dp"
            android:text="Nama Akun"
            android:textSize="24sp" />

        <TextView
            android:layout_width="396dp"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="5dp"
            android:layout_marginBottom="37dp"
            android:text="JL. Melati 5 Blok A:19Patrang, Kab Jember, Jawa Timur"
            android:textSize="20sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="6dp"
            android:layout_marginBottom="8dp"
            android:text="081234970970"
            android:textSize="18sp"
            android:id="@+id/no_hp"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignRight="@id/no_hp"
            android:layout_alignBottom="@+id/no_hp"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="28dp"
            android:layout_marginRight="-258dp"
            android:layout_marginBottom="-3dp"
            android:text="Ganti Alamat"
            android:textSize="14sp" />
    </RelativeLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="136dp"
        android:layout_alignParentStart="true">

        <ImageView
            android:layout_width="86dp"
            android:layout_height="77dp"
            android:layout_alignLeft="@+id/radio1"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="42dp"
            android:layout_marginTop="20dp"
            android:src="@drawable/ic_photo_camera_black_24dp" />

        <TextView
            android:id="@+id/judul"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="17dp"
            android:layout_marginEnd="61dp"
            android:text="Keripik Singkokng"
            android:textSize="25sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/harga"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/judul"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="0dp"
            android:layout_marginBottom="44dp"
            android:text="Rp.5.000"
            android:textSize="18sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/harga"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="1dp"
            android:layout_marginEnd="57dp"
            android:text="Jumlah 1 "
            android:textSize="18sp" />


    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="180dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Pilih Pengiriman"
            android:textSize="25sp" />

        <RadioButton
            android:id="@+id/radio_jne"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="1dp"
            android:layout_marginTop="37dp" />

        <TextView
            android:id="@+id/jne"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/radio_jne"
            android:layout_alignParentStart="true"
            android:layout_marginStart="42dp"
            android:layout_marginLeft="41dp"
            android:layout_marginTop="1dp"
            android:text="JNE "
            android:textSize="22sp" />

        <RadioButton
            android:id="@+id/radio_jnt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="1dp"
            android:layout_marginTop="119dp" />

        <TextView
            android:id="@+id/jnt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/radio_jne"
            android:layout_alignParentStart="true"
            android:layout_marginStart="43dp"
            android:layout_marginLeft="42dp"
            android:layout_marginTop="41dp"
            android:text="J&T "
            android:textSize="22sp" />

        <RadioButton
            android:id="@+id/radio_gojek"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="1dp"
            android:layout_marginTop="80dp" />

        <TextView
            android:id="@+id/gp_send"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/radio_jne"
            android:layout_alignParentStart="true"
            android:layout_marginStart="44dp"
            android:layout_marginLeft="43dp"
            android:layout_marginTop="82dp"
            android:text="GO-Send "
            android:textSize="22sp" />

        <TextView
            android:layout_width="97dp"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="179dp"
            android:layout_marginTop="119dp"
            android:layout_marginEnd="0dp"
            android:layout_marginBottom="11dp"
            android:layout_toEndOf="@+id/gp_send"
            android:text="Rp. 5.000"
            android:textSize="20sp" />

        <TextView
            android:layout_width="98dp"
            android:layout_height="28dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="225dp"
            android:layout_marginTop="78dp"
            android:layout_marginEnd="1dp"
            android:layout_marginBottom="11dp"
            android:layout_toEndOf="@+id/jnt"
            android:text="Rp. 6.000"
            android:textSize="20sp" />

        <TextView
            android:layout_width="101dp"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="224dp"
            android:layout_marginTop="43dp"
            android:layout_marginEnd="0dp"
            android:layout_marginBottom="11dp"
            android:layout_toEndOf="@+id/jne"
            android:text="Rp. 5.000"
            android:textSize="20sp" />

    </RelativeLayout>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_gravity="right"
        android:gravity="center"
        android:text="Bayar" />
</LinearLayout>